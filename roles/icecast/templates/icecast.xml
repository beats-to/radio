<icecast>
    <location>{{ icecast_location }}</location>
    <admin>{{ icecast_admin }}</admin>

    <limits>
        <clients>{{ icecast_limit_clients }}</clients>
        <sources>{{ icecast_limit_sources }}</sources>
        <threadpool>{{ icecast_limit_threads }}</threadpool>
        <queue-size>{{ icecast_limit_queues }}</queue-size>
        <client-timeout>{{ icecast_timeout_client }}</client-timeout>
        <header-timeout>{{ icecast_timeout_header }}</header-timeout>
        <source-timeout>{{ icecast_timeout_source }}</source-timeout>
{% if icecast_burst is defined %}
        <burst-on-connect>1</burst-on-connect>
        <burst-size>{{ icecast_burst }}</burst-size>
{% endif %}
    </limits>

    <authentication>
        <source-password>{{ icecast_auth_source }}</source-password>
        <relay-password>{{ icecast_auth_relay }}</relay-password>
        <admin-user>{{ icecast_auth_admin_user }}</admin-user>
        <admin-password>{{ icecast_auth_admin_pass }}</admin-password>
    </authentication>
    <hostname>{{ network_hostname }}</hostname>
    <listen-socket>
        <port>{{ icecast_port }}</port>
    </listen-socket>
    <paths>
        <basedir>/usr/local/share/icecast</basedir>
        <logdir>{{ icecast_log_path }}/</logdir>
        <webroot>/usr/local/share/icecast/web</webroot>
        <adminroot>/usr/local/share/icecast/admin</adminroot>
        <pidfile>{{ icecast_pid_path }}/{{ icecast_pid_file }}</pidfile>
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <playlistlog>playlist.log</playlistlog>
        <loglevel>3</loglevel>
        <logsize>10000</logsize>
        <logarchive>1</logarchive>
    </logging>

    <security>
        <chroot>0</chroot>
        <changeowner>
            <user>icecast</user>
            <group>icecast</group>
        </changeowner>
    </security>
</icecast>
